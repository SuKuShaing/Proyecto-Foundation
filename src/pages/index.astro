---
import Navbar from "../components/Navbar.astro";
import MainLayout from "../layouts/MainLayout.astro";

// Server Only
const name = 'Sebastián Sanhueza';
const titlePage = 'Página principal';
---

<MainLayout titlePage={titlePage}>
	<h1>Hi {name}</h1>


	<p>Momento actual: {new Date().toLocaleTimeString()}</p> <!-- Esto quedará estático -->
	<p>Momento actual real: <span id="momentoActual"></span></p>

	<footer>
		2024
	</footer>
</MainLayout>

<script>
	// Client Only
	const currentYear: number = new Date().getFullYear();
	
	const footer = document.querySelector('footer') as HTMLElement;
	const momentoActual = document.querySelector('#momentoActual') as HTMLElement;

	footer.innerHTML = `Año: ${currentYear}`;

	setInterval(() => {
		momentoActual.innerHTML = new Date().toLocaleTimeString();
	}, 1000);
</script>